<div class="container">
    <div class="card card-register mx-auto mt-5">
        <div class="card-body">
            <form class="formulario" action="/registro" method="POST">
                <h1 class="text-center">{{titulo}}</h1>
                {{!-- Alertas --}}
                {{#if message}}
                {{#each message}}
                <div class="alert alert-{{@key}} alert-dismissible fade show"><i class="fas fa-exclamation-circle"></i>
                    {{this}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                {{/each}}
                {{/if}}
                {{!-- /Alertas --}}
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <input type="hidden" name="external" value="0">
                            <div class="form-label-group">
                                <input name="nombre" type="text" id="nombre" class="form-control" placeholder="Nombre"
                                    required="required" autofocus="autofocus">
                                <label for="nombre">Nombre</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input name="apellido" type="text" id="apellido" class="form-control"
                                    placeholder="Apellido" required="required">
                                <label for="apellido">Apellido</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input name="cedula" type="text" id="cedula" class="form-control" placeholder="Cédula"
                                    required="required" autofocus="autofocus">
                                <label for="cedula">Cédula</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input name="telefono" type="text" id="telefono" class="form-control"
                                    placeholder="Teléfono" required="required">
                                <label for="telefono">Teléfono</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <select name="rol" class="form-control" id="inputRol">
                                    <option value="2">Rol: Servicios al cliente</option>
                                    <option value="3">Rol: Cajero</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input name="ciudad" type="text" id="ciudad" class="form-control" placeholder="Ciudad"
                                    required="required" autofocus="autofocus">
                                <label for="ciudad">Ciudad</label>
                            </div>
                        </div>

                    </div>
                </div>

                {{!-- Dirección --}}
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input name="callePrincipal" type="text" id="cp" class="form-control"
                                    placeholder="Calle Princiapl" required="required" autofocus="autofocus">
                                <label for="cp">Calle Princiapl</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input name="calleSecundaria" type="text" id="cs" class="form-control"
                                    placeholder="Calle Secundaria" required="required" autofocus="autofocus">
                                <label for="cs">Calle Secundaria</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input name="barrio" type="text" id="barrio" class="form-control" placeholder="Barrio"
                                    required="required" autofocus="autofocus">
                                <label for="barrio">Barrio</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input name="numeroCasa" type="text" id="numeroCasa" class="form-control"
                                    placeholder="Numero de casa" required="required" autofocus="autofocus">
                                <label for="numeroCasa">Numero de casa</label>
                            </div>
                        </div>
                    </div>
                </div>

                {{!-- //end --}}

                <div class="form-group">
                    <div class="form-label-group">
                        <input name="correo" type="email" id="inputEmail" class="form-control" placeholder="Correo"
                            required="required">
                        <label for="inputEmail">Correo</label>
                    </div>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Registar</button>
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="#">Página Principal</a>
                <a class="d-block small" href="#">¿Olvidó su carrera?</a>
            </div>
        </div>
    </div>
</div>
{{!-- Script --}}
<script>
    $().ready(function () {
        $("#busqueda").change(function () {
            if ($(this).val() == 'cedula') {
                $("#formulario").attr("action", '/servicios/transaccionCedula');
            } else {
                $("#formulario").attr("action", '/servicios/transaccionNumero');
            }
        });
    });
</script>
{{!-- /Script --}}

{{!-- Enlaces --}}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/administracion">Administracion</a>
    </li>
    <li class="breadcrumb-item active">{{titulo}}</li>
</ol>
{{!-- /Enlaces --}}

{{!-- Tabla --}}
<div class="card mb-3">

    <div class="card-header">
        <i class="fas fa-table"></i>
        {{titulo}}</div>
    <div class="card-body">
        <div class="table-responsive">
            <div class="col-md-6 ">
                <label for="bAccion" class="col-md-6 ">Concepto de buqueda</label>
                <div class="form-label-group">
                    <select class="form-label-group form-control" id="bAccion">
                        <option value="debito">Débito</option>
                        <option value="credito">Crédito</option>
                    </select>
                </div>
            </div>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Numero de Cuenta</th>
                        <th>Tipo de Movimiento</th>
                        <th>Valor</th>
                        <th>Lugar</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Fecha</th>
                        <th>Numero de Cuenta</th>
                        <th>Tipo de Movimiento</th>
                        <th>Valor</th>
                        <th>Lugar</th>
                    </tr>
                </tfoot>
                <tbody id="tb">
                    {{#each transaccion}}
                    <tr>
                        <td>{{this.fecha_transaccion}}</td>
                        <td>{{this.nro_cuenta}}</td>
                        <td>{{this.movimiento.tipo_movimiento}}</td>
                        <td>{{this.valor}}</td>
                        <td>{{this.localizacion.ciudad}}, {{this.localizacion.pais}}</td>
                    </tr>
                    {{else}}
                    <p class="empty">No content</p>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <a href="/reporte.pdf" class="btn btn-primary" target="_blank">Descargar Reporte</a>
    </div>
    <div class="card-footer small text-muted">{{titulo}} - CDB</div>
</div>
{{!-- /Tabla --}}